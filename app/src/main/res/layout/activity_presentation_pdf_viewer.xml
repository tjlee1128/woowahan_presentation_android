<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baemin.woowahan_presentation_android.presentation.PresentationPdfViewerActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        
        <RelativeLayout
            android:id="@+id/activity_presentation_pdf_viewer_toolbar_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/activity_presentation_pdf_viewer_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="size"/>
            <RelativeLayout
                android:id="@+id/activity_presentation_pdf_viewer_close_rl"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_close_light"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/activity_presentation_pdf_viewer_toolbar_rl">
            <android.support.v4.view.ViewPager
                android:id="@+id/activity_presentation_pdf_viewer_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>
