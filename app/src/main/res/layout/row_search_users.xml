<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- USER INFO -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="6dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/row_search_user_image_iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:riv_border_color="@color/black"
                    android:layout_centerVertical="true"
                    app:riv_border_width="0.5dp"
                    app:riv_corner_radius="0.5dp"
                    app:riv_mutate_background="true" />

                <RelativeLayout
                    android:id="@+id/row_search_user_name_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/row_search_user_image_iv">

                    <TextView
                        android:id="@+id/row_search_user_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:text="이 름" />

                    <TextView
                        android:id="@+id/row_search_user_team_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/row_search_user_tv"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        tools:text="팀이름" />

                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>